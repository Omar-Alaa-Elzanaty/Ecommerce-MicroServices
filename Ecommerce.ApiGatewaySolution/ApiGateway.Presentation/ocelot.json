{
  "Routes": [
    //Authentication Service
    {
      "DownstreamPathTemplate": "/api/authentication/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7292
        }
      ],
      "UpstreamPathTemplate": "/api/authentication/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "10s",
        "Limit": 1,
        "PeriodTimespan": 10
      }
    },
    //Product Service
    {
      "DownstreamPathTemplate": "/api/product/",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7167
        }
      ],
      "UpstreamPathTemplate": "/api/product/",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": {
        "TtlSeconds": 10,
        "Region": "default",
        "Header": "eCommerce-Caching-Control"
      }
    },
    //Get By ID Product Service
    {
      "DownstreamPathTemplate": "/api/product/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7167
        }
      ],
      "UpstreamPathTemplate": "/api/product/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": {
        "TtlSeconds": 10,
        "Region": "default",
        "Header": "eCommerce-Caching-Control"
      }
    },
    //Post,Put,Delete Product Service
    {
      "DownstreamPathTemplate": "/api/product/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7167
        }
      ],
      "UpstreamPathTemplate": "/api/product/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    //Order Service Get
    {
      "DownstreamPathTemplate": "/api/order/",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7179
        }
      ],
      "UpstreamPathTemplate": "/api/order/",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": {
        "TtlSeconds": 10,
        "Region": "default",
        "Header": "eCommerce-Caching-Control"
      },
      "AuthenticationOptions": {
        "AuthenticationProvider": "Bearer",
        "AllowedScopes": []
      }
    },
    //Order Service Get By ID
    {
      "DownstreamPathTemplate": "/api/order/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7179
        }
      ],
      "UpstreamPathTemplate": "/api/order/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": {
        "TtlSeconds": 10,
        "Region": "default",
        "Header": "eCommerce-Caching-Control"
      },
      "AuthenticationOptions": {
        "AuthenticationProvider": "Bearer",
        "AllowedScopes": []
      }
    },
    //Order Service Post, Put, Delete
    {
      "DownstreamPathTemplate": "/api/order/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7179
        }
      ],
      "UpstreamPathTemplate": "/api/order/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProvider": "Bearer",
        "AllowedScopes": []
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5030",
    "RateLimitOptions": {
      "QuotaExceededMessage": "You have exceeded the allowed number of requests. Please try again later."
    }
  }
}